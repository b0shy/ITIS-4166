<%- include('../partials/header.ejs')%>
    <div class="content">
        <main>
        <form action= '/events/<%= event.id%>?_method=PUT' method='POST' class="new-form">
            <label for="event_category">Category</label>
            <select name="category" id="category" value="<%= event.category%>" required>
                <option value="" disabled selected>--Select a Category--</option>
                <option value="sports">Sports</option>
                <option value="video_games">Video Games</option>
                <option value="crafts">Crafts</option>
                <option value="study">Study</option>
                <option value="other">Other</option>
            </select>
            <label for="event_title">Title</label>
            <input type="text" name="title" id="title" value="<%= event.title%>" placeholder="title" required>
            <label for="event_host">Host</label>
            <input type="text" name="host" id="host" value="<%= event.host%>" placeholder="host" required>
            <label for="event_details">Details</label>
            <input type="text" name="content" id="content" value="<%= event.content%>" placeholder="description" required>
            <label for="event_location">Location</label>
            <input type="text" name="location" id="location" value="<%= event.location%>" placeholder="location" required>
            <label for="event_start">Start</label>
            <input type="datetime-local" name="start" id="start" value="<%= event.start%>" required>
            <label for="event_end">End</label>
            <input type="datetime-local" name="end" id="end" value="<%= event.end%>" required>
            <label for="event_image">Image</label>
            <input type="file" name="imageURL" id="imageURL" required>
            <input type="submit" value="Submit">
        </form>
    </main>
    </div>
    <%- include('../partials/footer.ejs')%>