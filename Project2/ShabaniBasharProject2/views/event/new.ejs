<%- include('../partials/header.ejs')%>
    <div class="content">
        <main>
        <form action= '/events' method='POST' class="new-form">
            <label for="event_category">Category</label>
            <select name="category" id="category" required>
                <option value="" disabled selected>--Select a Category--</option>
                <option value="Sports">Sports</option>
                <option value="Video Games">Video Games</option>
                <option value="Crafts">Crafts</option>
                <option value="Study">Study</option>
                <option value="Other">Other</option>
            </select>
            <label for="event_title">Title</label>
            <input type="text" name="title" id="title" placeholder="title" required>
            <label for="event_host">Host</label>
            <input type="text" name="host" id="host" placeholder="host" required>
            <label for="event_details">Details</label>
            <input type="text" name="content" id="content" placeholder="description" required>
            <label for="event_location">Location</label>
            <input type="text" name="location" id="location" placeholder="location" required>
            <label for="event_start">Start</label>
            <input type="datetime-local" name="start" id="start" required>
            <label for="event_end">End</label>
            <input type="datetime-local" name="end" id="end" required>
            <label for="event_image">Image</label>
            <input type="file" name="imageURL" id="imageURL" required>
            <input type="submit" value="Submit">
        </form>
    </main>
    </div>
    <%- include('../partials/footer.ejs')%>